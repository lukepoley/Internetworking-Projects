<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Network Name Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected to"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_network_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Network Name"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="5 GHz"
                        android:textColor="@color/primary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/badge_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Channel 36"
                        android:textColor="@color/primary"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Signal Strength Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Signal Strength"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_signal_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="85%"
                    android:textColor="@color/signal_good"
                    android:textSize="56sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_signal_dbm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-55 dBm"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

                <!-- Signal Bars -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/signal_bar_1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/signal_excellent" />

                    <View
                        android:id="@+id/signal_bar_2"
                        android:layout_width="16dp"
                        android:layout_height="28dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/signal_excellent" />

                    <View
                        android:id="@+id/signal_bar_3"
                        android:layout_width="16dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/signal_excellent" />

                    <View
                        android:id="@+id/signal_bar_4"
                        android:layout_width="16dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/signal_inactive" />

                    <View
                        android:id="@+id/signal_bar_5"
                        android:layout_width="16dp"
                        android:layout_height="64dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/signal_inactive" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_signal"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:max="100"
                    android:progress="85"
                    android:progressDrawable="@drawable/progress_signal" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Direction Hint Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Find Your Router"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_direction_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Move around to detect signal direction"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reset_direction"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Reset Detection"
                    android:textColor="@color/primary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Nearby Networks Count -->
        <TextView
            android:id="@+id/tv_nearby_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="5 nearby networks"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
